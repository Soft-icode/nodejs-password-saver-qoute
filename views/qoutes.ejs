
   <body>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400;0,500;1,600;1,700&display=swap');
*{
    margin: o;
    padding: 0;
    box-sizing: border-box;
    font-family: 'Playfair Display', serif;
}


body{
    background: url('https://i.ibb.co/fvDfF8t/background.png');
    background-color: #000;
    background-size: cover;
    background-repeat: no-repeat;
    height: 100vh;
}

.container{
    background: #f5f3f3;
    max-width: 80%;
    margin: auto;
   top:50%;
   left: 50%;
   padding: 40px;
   border-radius: 10px;
  position: absolute;
  text-align: center;
  transform: translate(-50%, -50%);
   box-shadow: 0 10px 20px black;
}
.container h1 {
    position: relative;
   color: green;
    padding: 10px;
}
.container h2{
    font-size: 32px;
    border-bottom: 40px;
    position: relative;
}
.container h2::after{
    content: '';
    width: 75px;
    height: 3px;
    border-radius: 3px;
    background: blue;
    position: absolute;
   left: 50%;
   bottom: -10px;
    transform: translateX(-50%);
}
.container blockquote{
    font-size: 26px;
    min-height: 110px;
}
.container blockquote::before, .container blockquote::after{
    content: '"';
}
.container span{
    display: block;
    margin-top: 10px;
    margin-left: 500px;
    float: right;
    position: relative;
}
.container span::before{
    content:'' ;
    width: 20px;
    height: 2px;
    background:black ;
    position: absolute;
    top: 50%;
    left: -30px;
}
.container div{
    width: 100%;
    margin-top: 50px;
    display: flex;
    justify-content: center;
}
.container button{
    background: black;
    color: #fff;
    border-radius: 25px;
    border: 1px solid black;
    width: 150px;
    height: 50px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 5px;
    cursor: pointer;
}
.container button img{
    width: 30px;
    margin-left: 10px;
    padding-right: 10px;
}
.container button:nth-child(2){
    background: transparent;
    color: #333;
}
footer{
    padding-top: 15px;
}
    </style>
    <div class="container">
    
        
        <h2>Quote of the day</h2>
        <blockquote id="qoute">Loading...</blockquote>
        <span id="author">loading...</span>
        <div>
        <button onclick="getqoute(api_url)">New Qoute</button>
        <button onclick="tweet()"><i class='fab fa-slack-hash' style='font-size:48px;color:red'></i>Tweet</button>
        </div>
        <footer>
            &copy; copyright by(SOFT-X TECH)
           </footer>
       
    </div>
    <script> 
        const qoute = document.getElementById("qoute")
const author = document.getElementById("author")
const api_url = 'https://api.quotable.io/random';
async function getqoute(url){
    const response = await fetch(url);
    var data = await response.json();
    console.log(data);
    qoute.innerHTML = data.content
   author.innerHTML = data.author
}
getqoute(api_url);

function tweet(){
    window.open("https://twitter.com/intent/tweet?text=" + qoute.innerHTML ,"Tweet window", "width=600, height=300")
}


    </script>
   </body>
    